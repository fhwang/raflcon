<form action="/giveaway_attempts/create" method="post" onsubmit="new Ajax.Request('/giveaway_attempts/create',{asynchronous:true, evalScripts:true, parameters:Form.serialize(this), onComplete:function(request) {new_giveaway_attempt(request.responseText.evalJSON().giveaway_attempt);} }); return false;" class="giveaway_form">
  <input type="hidden" name="giveaway_attempt[giveaway_id]" value="<%=
    giveaway.id
  %>">
  <input name="giveaway_attempt[size]" value="<%= giveaway.suggested_attempt_size %>" class="text">
  <input type="submit" class="submit" value="RAFL">
  <img src="/frontends/goruco_2010/images/close.png" onclick="close_giveaway(<%= giveaway.id %>)" class="close"/>
</form>

